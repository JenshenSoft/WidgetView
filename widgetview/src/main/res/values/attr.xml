<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <declare-styleable name="WidgetView_Params">
        <attr name="widgetView_pointWidth" format="dimension" />
        <attr name="widgetView_pointHeight" format="dimension" />
        <attr name="widgetView_borderOffset" format="dimension" />
        <attr name="widgetView_pointIcon" format="reference" />
        <attr name="widgetView_dragAndDrop_byLongClick" format="boolean" />
        <attr name="widgetView_corner_topLeft_columnLine" format="integer" />
        <attr name="widgetView_corner_topLeft_rowLine" format="integer" />
        <attr name="widgetView_corner_topRight_columnLine" format="integer" />
        <attr name="widgetView_corner_topRight_rowLine" format="integer" />
        <attr name="widgetView_corner_bottomLeft_columnLine" format="integer" />
        <attr name="widgetView_corner_bottomLeft_rowLine" format="integer" />
        <attr name="widgetView_corner_bottomRight_columnLine" format="integer" />
        <attr name="widgetView_corner_bottomRight_rowLine" format="integer" />
    </declare-styleable>

    <declare-styleable name="WidgetContainerLayout_Params" tools:ignore="ResourceName">
        <attr name="widgetContainer_columnCount" format="integer" />
        <attr name="widgetContainer_rowCount" format="integer" />
        <attr name="widgetContainer_enableTrash" format="boolean" />
        <attr name="widgetContainer_trashIcon" format="reference" />
        <attr name="widgetContainer_linesColor" format="color" />
        <attr name="widgetContainer_autoConnect_AvailabilityZone" format="integer" />
        <attr name="widgetContainer_connectOnlyEmptyPoints" format="boolean" />
        <attr name="widgetContainer_deletePanelGravity">
            <flag name="top" value="0" />
            <flag name="bottom" value="1" />
            <flag name="right" value="2" />
            <flag name="left" value="3" />
        </attr>
    </declare-styleable>
</resources>