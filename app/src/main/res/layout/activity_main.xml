<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorAccent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.jenshensoft.widgetview.WidgetContainerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.jenshensoft.widgetview.WidgetView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@color/colorPrimary">

           <!-- <ImageView
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:background="@color/colorAccent" />-->

        </com.jenshensoft.widgetview.WidgetView>

        <com.jenshensoft.widgetview.WidgetView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/colorPrimary"
            app:widgetView_corner_topLeft_columnLine="1"
            app:widgetView_corner_topLeft_rowLine="1"
            app:widgetView_corner_topRight_columnLine="3"
            app:widgetView_corner_topRight_rowLine="1"
            app:widgetView_corner_bottomLeft_columnLine="1"
            app:widgetView_corner_bottomLeft_rowLine="2"
            app:widgetView_corner_bottomRight_columnLine="3"
            app:widgetView_corner_bottomRight_rowLine="2">

           <!-- <ImageView
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:background="@color/colorAccent" />-->

        </com.jenshensoft.widgetview.WidgetView>
    </com.jenshensoft.widgetview.WidgetContainerLayout>

</LinearLayout>
